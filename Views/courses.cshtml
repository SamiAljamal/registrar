<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>Courses</h2>
    @if (Model.Count != 0)
    {
      <ul>
        @foreach (var course in Model)
        {
          <li><a href="/courses/@course.GetId()">@course.GetName()</a></li>
        }
      </ul>
    }
    else
    {
      <h3>There are no courses!</h3>
    }


    <h3>Add Courses</h3>
    <form action="/courses/new" method="post">
      <label for="course-name">Course Name</label>
      <input type="text" name="course-name" required>
      <br>
      <label for="course-teacher">Teacher</label>
      <input type="text" name="course-teacher">
      <br>
      <button type="submit"> Add course</button>

    </form>

  </body>
</html>
