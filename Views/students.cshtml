<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>All Students</h2>
    @if (Model.Count != 0)
    {
      <ul>
        @foreach (var student in Model)
        {
          <li><a href="/student/@student.GetId()">@student.GetName()</a></li>
        }
      </ul>
    }
    else
    {
      <h3>There are no students enrolled!</h3>
    }


    <h3>Add Students</h3>
    <form action="/students/new" method="post">
      <label for="student-name">Student Name</label>
      <input type="text" name="student-name" required>
      <br>
      <button type="submit">Add student</button>

    </form>

  </body>
</html>
